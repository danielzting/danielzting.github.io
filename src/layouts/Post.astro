---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
    <article>
        <h1>{frontmatter.title}</h1>
        <time datetime={frontmatter.date.split("T")[0]}>
            {
                new Date(frontmatter.date).toLocaleString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                    timeZone: "UTC",
                })
            }
        </time>
        <slot />
    </article>
    <script
        is:inline
        data-astro-rerun
        src="https://giscus.app/client.js"
        data-repo="danielzting/danielzting.github.io"
        data-repo-id="MDEwOlJlcG9zaXRvcnkzNDM5NDEyMTc="
        data-category="Announcements"
        data-category-id="DIC_kwDOFIAgYc4Cx3Zr"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="0"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="light"
        data-lang="en"
        data-loading="lazy"
        crossorigin="anonymous"
        async></script>
</BaseLayout>

<style>
    time {
        display: inline-block;
        padding-bottom: 1rem;
    }
</style>
