---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const { title, description, frontmatter } = Astro.props;
---

<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Daniel Ting"
            href={new URL("rss.xml", Astro.site)}
        />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Garamond -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
            rel="stylesheet"
        />

        <title>{(title ?? frontmatter.title) + " | Daniel Ting"}</title>
        <meta
            name="description"
            content={description ?? "My personal homepage."}
        />

        <!-- SEO -->
        <meta property="og:title" content={title ?? frontmatter.title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        <meta property="og:site_name" content="Daniel Ting" />
        <meta property="og:image" content={Astro.url.origin + "/favicon.png"} />

        <ClientRouter />

        <script
            id="MathJax-script"
            async
            src="https://cdn.jsdelivr.net/npm/mathjax@4/tex-mml-chtml.js"
        ></script>
        <script is:inline>
            function setTheme() {
                const lightTheme = localStorage.getItem("lightTheme");
                if (lightTheme) {
                    document.documentElement.classList.remove("dark");
                } else {
                    document.documentElement.classList.add("dark");
                }
            }
            setTheme();
            document.addEventListener("astro:after-swap", setTheme);
        </script>
        <script>
            document.addEventListener("astro:after-swap", () =>
                document
                    .querySelectorAll("video")
                    .forEach(
                        (v) =>
                            v.closest("[data-astro-transition-persist]") ||
                            (v.src = v.src),
                    ),
            );
        </script>
    </head>

    <body>
        <section id="lines-vertical">
            {
                [...Array(20).keys()].map((i) => (
                    <div class="line" style={`animation-delay: ${i / 30}s`} />
                ))
            }
        </section>
        <section id="lines-horizontal">
            {
                [...Array(20).keys()].map((i) => (
                    <div class="line" style={`animation-delay: ${i / 30}s`} />
                ))
            }
        </section>
        <div id="everything" class="centered-constrained">
            <Header />
            <div class="centered-constrained cover-and-surround">
                <main>
                    <slot />
                </main>
                <hr />
                <Footer />
            </div>
        </div>
    </body>
</html>

<style>
    html {
        scrollbar-gutter: stable;
    }

    body {
        margin: 0;
        font-size: large;
        color: var(--text-color);
        background-color: var(--bg-color);
        line-height: 1.5;
        font-family: "EB Garamond", "Times New Roman", serif;
    }

    /* https://aleclownes.com/2017/02/01/crt-display.html */
    html.dark body::before {
        content: " ";
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background:
            linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%),
            linear-gradient(
                90deg,
                rgba(255, 0, 0, 0.06),
                rgba(0, 255, 0, 0.02),
                rgba(0, 0, 255, 0.06)
            );
        z-index: 2;
        background-size:
            100% 2px,
            3px 100%;
        pointer-events: none;
        opacity: 0.5;
    }

    @keyframes flicker {
        0% {
            opacity: 0.27861;
        }
        5% {
            opacity: 0.34769;
        }
        10% {
            opacity: 0.23604;
        }
        15% {
            opacity: 0.90626;
        }
        20% {
            opacity: 0.18128;
        }
        25% {
            opacity: 0.83891;
        }
        30% {
            opacity: 0.65583;
        }
        35% {
            opacity: 0.67807;
        }
        40% {
            opacity: 0.26559;
        }
        45% {
            opacity: 0.84693;
        }
        50% {
            opacity: 0.96019;
        }
        55% {
            opacity: 0.08594;
        }
        60% {
            opacity: 0.20313;
        }
        65% {
            opacity: 0.71988;
        }
        70% {
            opacity: 0.53455;
        }
        75% {
            opacity: 0.37288;
        }
        80% {
            opacity: 0.71428;
        }
        85% {
            opacity: 0.70419;
        }
        90% {
            opacity: 0.7003;
        }
        95% {
            opacity: 0.36108;
        }
        100% {
            opacity: 0.24387;
        }
    }

    html.dark body::after {
        content: " ";
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background: rgba(18, 16, 16, 0.05);
        opacity: 0;
        z-index: 2;
        pointer-events: none;
        animation: flicker 0.15s infinite;
    }

    #lines-vertical {
        position: fixed;
        display: flex;
        height: 100vh;
        width: 100vw;
        justify-content: space-between;
        z-index: -1;
    }

    #lines-horizontal {
        position: fixed;
        display: flex;
        flex-direction: column;
        height: 100vh;
        width: 100vw;
        justify-content: space-between;
        z-index: -1;
    }

    @keyframes pulse {
        from {
            opacity: 0.1;
        }
        75% {
            opacity: 0.1;
        }
        85% {
            opacity: 0.5;
        }
        90% {
            opacity: 0.5;
        }
        to {
            opacity: 0.1;
        }
    }

    html.dark .line {
        border: 1px solid #52d053;
        animation: pulse 10s infinite;
        z-index: -1;
        opacity: 0.1;
    }

    .centered-constrained {
        max-width: 50rem;
        margin: 0 auto;
    }

    html.dark .centered-constrained {
        text-shadow: 0 0 1px var(--text-color);
    }

    #everything {
        padding: 1rem;
    }
</style>
